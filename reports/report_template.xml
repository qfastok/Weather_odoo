<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_city_weather">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Report "City Weather"</h2>
                        <p>City is <span t-field="o.city_id"/></p>
                        <p>Date is <span t-field="o.date"/></p>
                        <p>Temperature is <span t-field="o.temperature_c"/> <span t-field="o.temperature_uom_c_id"/></p>
                        <p><span t-field="o.temperature_f"/> <span t-field="o.temperature_uom_f_id"/></p>
                        <p>Humidity is <span t-field="o.humidity"/>%</p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>